{
    "manifest_version": 3,
    "name": "URL Discord Status",
    "version": "1.1",
    "description": "Share your Online activity with friends! This extension will put URl you watching into your Discord custom status.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icons8-furry-discord-16.png",
            "32": "/images/icons8-furry-discord-32.png",
            "48": "/images/icons8-furry-discord-48.png",
            "64": "/images/icons8-furry-discord-64.png",
            "128": "/images/icons8-furry-discord-128.png"
        }
    },
    "icons": {
        "16": "/images/icons8-furry-discord-16.png",
        "32": "/images/icons8-furry-discord-32.png",
        "48": "/images/icons8-furry-discord-48.png",
        "64": "/images/icons8-furry-discord-64.png",
        "128": "/images/icons8-furry-discord-128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}
