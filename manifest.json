{
    "manifest_version": 2,
    "name": "URL Discord Status",
    "version": "1.3",
    "description": "Share your Online activity with friends! This extension will put URl you watching into your Discord custom status.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icons8-furry-discord-16.png",
            "48": "/images/icons8-furry-discord-48.png",
            "128": "/images/icons8-furry-discord-128.png"
        }
    },
    "icons": {
        "48": "/images/icons8-furry-discord-48.png",
        "96": "/images/icons8-furry-discord-96.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "cookies",
        "*://*/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "your-extension-id@your-domain.com"
        }
    }
}
